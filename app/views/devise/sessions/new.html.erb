<h2>Logowanie</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),
	html: { class: 'form-horizontal'}) do |f| %>
  
  <%= f.input :email %>
  <%= f.input :password , label: "Hasło"%>
  <%= f.input :remember_me, as: :boolean, label: "Zapamiętaj mnie" %>

  <div class="form-actions">
    <%= f.submit "Zaloguj", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
